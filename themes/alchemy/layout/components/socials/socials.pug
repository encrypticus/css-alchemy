mixin socials(mods)
  -
    // список модификаторов
    let allMods = '';

    if(typeof(mods) !== 'undefined' && mods) {
      let modsList = mods.split(',');
      for (let i = 0; i < modsList.length; i++) {
        allMods = allMods + ' socials_' + modsList[i].trim();
      }
    }

  .socials(class=allMods)
    a.socials__link(href='https://github.com/encrypticus/')
      img.socials__icon(src="/css-alchemy/img/github-icon.svg", alt="мой github")
    a.socials__link(href='https://t.me/encrypticus')
      img.socials__icon(src='/css-alchemy/img/telegram-icon.svg', alt="мой телеграм")
    a.socials__link(href='mailto:encrypticus@gmail.com')
      img.socials__icon(src='/css-alchemy/img/gmail-icon.svg', alt="мое мыло")
